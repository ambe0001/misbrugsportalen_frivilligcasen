---
const { title, tekst, billede, alt, reverse = false } = Astro.props;
---

<div>
  <article class={reverse ? "reverse card" : "card"}>
    <img src={`imgs/${billede}`} alt={alt} />
    <div class="copy">
      <h3>{title}</h3>
      <p>{tekst}</p>
      <slot />
    </div>
  </article>
</div>
<style>
  img {
    width: 100%;
    border-radius: 8px;
  }

  .card {
    padding-bottom: 50px;
    padding-top: 70px;
    padding-left: 20px;
    padding-right: 20px;
  }

  p {
    font-size: 1rem;
    color: #fcf7f0;
    padding-bottom: 20px;
  }
  h3 {
    font-size: 2.25rem;
    color: #e56f3f;
    padding-top: 10px;
    padding-bottom: 7px;
  }
  .tekst {
    padding-top: 70px;
  }
  .copy {
    padding-top: 20px;
    padding-bottom: 10px;
  }

  @media screen and (min-width: 900px) {
    .card {
      display: flex;
      flex-direction: row;
      gap: 95px;
    }

    img {
      width: 50%;
      border-radius: 0px;
    }

    .copy {
      padding-top: 60px;
    }
    .card {
      padding-bottom: 50px;
      padding-top: 70px;
      padding-left: 0px;
      padding-right: 0px;
    }

    .reverse {
      flex-direction: row-reverse;
    }

    p {
      margin-bottom: 10px;
      margin-top: 15px;
      font-size: 20px;
      max-width: 600px;
      color: #fcf7f0;
      line-height: 35px;
    }

    h3 {
      font-size: 45px;
      color: #e56f3f;
    }

    .tekst {
      padding-top: 70px;
    }
  }

  @keyframes appear {
    from {
        opacity: 0;
        clip-path: inset(100% 0 0 0);
    }
    to {
        opacity: 1;
        clip-path: inset(0 0 0 0);
    }
  }

img, h3, p {
    animation: appear linear;
    animation-timeline: view();
    animation-range: entry 0% cover 40%;
}
</style>
